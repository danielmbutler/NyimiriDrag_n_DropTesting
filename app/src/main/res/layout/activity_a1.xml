<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".A1">

    <com.ebanx.swipebtn.SwipeButton
        android:id="@+id/switch1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/next"
        android:textColor="#757575"
        android:textOff="@string/offPlay"
        android:textOn="@string/onNext"
        android:textSize="40sp"
        app:button_image_disabled="@drawable/ic_baseline_directions_run_24"
        app:button_image_enabled="@drawable/ic_baseline_double_arrow_24"
        app:button_background="@drawable/swipe_button_shape"
        app:button_bottom_padding="10dp"
        app:button_left_padding="10dp"
        app:button_right_padding="10dp"
        app:button_top_padding="10dp"
        app:inner_text="Next"
        app:inner_text_color="@android:color/white"
        app:inner_text_size="20sp"
        app:inner_text_top_padding="10dp"
        app:inner_text_bottom_padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.923"
        app:showText="true" />


</androidx.constraintlayout.widget.ConstraintLayout>